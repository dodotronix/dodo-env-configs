## assigns for different applications
    # workspace containing browser
    assign [class="(?i)firefox"] workspace $ws_browser
    workspace $ws_browser output primary

    # workspace containing mail client
    assign [class="(?i)Claws-mail"] workspace $ws_mail
    workspace $ws_mail output primary

    # workspace containing todo list
    assign [title="(?i)todo-list"] workspace $ws_todo
    workspace $ws_todo output primary

    # workspace music 
    for_window [class="(?i)Spotify"] move to workspace $ws_music
    workspace $ws_music output primary

    # workspace music 
    assign [class="(?i)pidgin"] workspace $ws_chat
    workspace $ws_chat output primary
## end assigns for different applications

