#static workspaces variables
    set $ws_browser "0:[a] firefox"
    set $ws_mail "1:[o] mail"
    set $ws_music "2:[e] music"
    set $ws_chat "3:[u] chat"
    set $ws_todo "4:[i] todo"
# end static workspaces variables

# GAPS
    gaps inner 5
    gaps outer 5

# MODES
## reorganize workspaces
    mode "organize" {
        #switch to workspace
        bindsym a workspace number 0
        bindsym o workspace number 1
        bindsym e workspace number 2
        bindsym u workspace number 3
        bindsym i workspace number 4
        bindsym d workspace number 5
        bindsym h workspace number 6
        bindsym t workspace number 7
        bindsym n workspace number 8
        bindsym s workspace number 9

        #return back to normal
        bindsym Escape mode "default"
        bindsym space mode "default"
        bindsym $mod+u mode "default"
    }
    bindsym $mod+u mode "organize"
## end reorganize workspaces

## resize windows
    mode "resize" {
            bindsym h resize shrink width 10 px or 10 ppt
            bindsym t resize grow height 10 px or 10 ppt
            bindsym n resize shrink height 10 px or 10 ppt
            bindsym s resize grow width 10 px or 10 ppt

            # same bindings, but for the arrow keys
            bindsym Left resize shrink width 10 px or 10 ppt
            bindsym Down resize grow height 10 px or 10 ppt
            bindsym Up resize shrink height 10 px or 10 ppt
            bindsym Right resize grow width 10 px or 10 ppt

            # back to normal: Enter or Escape or $mod+r
            bindsym space mode "default"
            bindsym Escape mode "default"
            bindsym $mod+p mode "default"
    }
    bindsym $mod+p mode "resize"
## end resize windows

