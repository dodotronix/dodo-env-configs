## manipulate workspaces
    # append and rename workspace
    bindsym $mod+a exec $HOME/.config/i3/i3wsorg.py append
    bindsym $mod+r exec $HOME/.config/i3/i3wsorg.py rename

    # switching between workspaces
    bindsym $mod+b workspace next
    bindsym $mod+m workspace prev

    # change container layout (stacked, tabbed, toggle split)
    bindsym $mod+o layout stacking
    bindsym $mod+comma layout tabbed
    bindsym $mod+period layout toggle split
    
    # returning on the previous position with the same key
    workspace_auto_back_and_forth yes
## end manipulate workspaces

## WM defaults
    # reload the configuration file
    bindsym $mod+Shift+J reload

    # restart i3 inplace 
    bindsym $mod+Shift+P restart

    # exit i3 (logout)
    bindsym $mod+Shift+greater exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
## end WM defaults

