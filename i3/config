## reorganize workspaces
    mode "organize" {
        #switch to workspace
        bindsym a workspace number 0; mode "default"
        bindsym o workspace number 1; mode "default"
        bindsym e workspace number 2; mode "default"
        bindsym u workspace number 3; mode "default"
        bindsym i workspace number 4; mode "default"
        bindsym d workspace number 5; mode "default"
        bindsym h workspace number 6; mode "default"
        bindsym t workspace number 7; mode "default"
        bindsym n workspace number 8; mode "default"
        bindsym s workspace number 9; mode "default"

        # move focused container to workspace
        bindsym ctrl+a move container to workspace number 0
        bindsym ctrl+o move container to workspace number 1
        bindsym ctrl+e move container to workspace number 2
        bindsym ctrl+u move container to workspace number 3
        bindsym ctrl+i move container to workspace number 4
        bindsym ctrl+d move container to workspace number 5
        bindsym ctrl+h move container to workspace number 6
        bindsym ctrl+t move container to workspace number 7
        bindsym ctrl+n move container to workspace number 8 
        bindsym ctrl+s move container to workspace number 9

        #return back to normal
        bindsym Escape mode "default"
        bindsym space mode "default"
        bindsym $mod+u mode "default"
    }
    bindsym $mod+u mode "organize"
## end reorganize workspaces

## move workspace right
